

@model ShoppingWeb.DataAccess.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary"> Liste Kategorisi</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category">  <i class="bi bi-plus-cricle"></i/>&nbsp; Yeni Kategori Oluştur</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%"> 
    <thead>
        <tr>
            <th>
                Kategori İsmi
            </th>
            <th>
                Görüntüleme Sırası
            </th>
            <th>
                Eylem
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td> @item.Name</td>
                <td>@item.DisplayOrder</td>

                <td role="group">
                   <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Düzenle</a>
                   <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>

                </td>
            </tr>
        }
    </tbody>

</table>