@model ShoppingWeb.DataAccess.ViewModels.CartVM
<form method="post" asp-action="ComplateOrder">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h4 class="mb-0">Sipariş Detayları</h4>
                </div>
                <div class="card-body">

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">İsim</label>
                                <input type="text" asp-for="@Model.OrderHeader.Name" class="form-control" />

                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example6">Telefon</label>
                            <input type="number" asp-for="@Model.OrderHeader.Phone" class="form-control" />

                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example7">Adres</label>
                            <textarea class="form-control" asp-for="@Model.OrderHeader.Address" rows="4"></textarea>

                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example6">Şehir</label>
                            <input type="text" asp-for="@Model.OrderHeader.City" class="form-control" />

                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example6">Durum</label>
                            <input type="text" asp-for="@Model.OrderHeader.State" class="form-control" />

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
    @Html.HiddenFor(model => Model.ListOfCart)
    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Sipariş Özeti</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var details in @Model.ListOfCart)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span>@details.Product.Name</span>
                            <span>Adet: @details.Count</span>
                            <span>@(((details.Product.Price) * (details.Count)).ToString("c"))</span>
                        </li>

                    }
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        <div>
                            <strong>Toplam Miktar</strong>
                            <strong>
                                <p class="mb-0">(KDV Dahil)</p>
                            </strong>
                        </div>
                        <span><strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                    </li>
                </ul>
                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    Alışverişi Tamamla
                </button>


            </div>
            <div>
            </div>
        </div>
    </div>
</form>